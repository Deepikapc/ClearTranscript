<% if @section.errors.any? %>
	<ul>
		<% @section.errors.full_messages.each do |msg| %>
			<li><%= msg%></li>
		<% end %>
	</ul>	
<% end %>
<%= form_for @section do |f| %>
	<%= f.label :header %>:
	<%= f.text_field :header %><br/></br>
	<%= f.label :description %>:
	<%= f.text_area :description %><br/></br>
	Course: <%= f.collection_select :course_id,Course.all, :id,:name %></br></br>
	<%= f.submit %>
<% end %>
